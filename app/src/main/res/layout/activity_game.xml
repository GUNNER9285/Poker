<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.poker.Game"
    android:padding="8dp">

    <ImageView
        android:id="@+id/card5"
        android:layout_width="90dp"
        android:layout_height="140dp"
        android:layout_margin="8dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/cover"
        android:layout_toLeftOf="@id/card3"
        android:onClick="keepCard5"/>
    <ImageView
        android:id="@+id/card3"
        android:layout_width="90dp"
        android:layout_height="140dp"
        android:layout_margin="8dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/cover"
        android:layout_toLeftOf="@id/card1"
        android:onClick="keepCard3"/>
    <ImageView
        android:id="@+id/card1"
        android:layout_width="90dp"
        android:layout_height="140dp"
        android:layout_margin="8dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/cover"
        android:onClick="keepCard1"/>
    <ImageView
        android:id="@+id/card2"
        android:layout_width="90dp"
        android:layout_height="140dp"
        android:layout_margin="8dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/cover"
        android:layout_toRightOf="@+id/card1"
        android:onClick="keepCard2"/>
    <ImageView
        android:id="@+id/card4"
        android:layout_width="90dp"
        android:layout_height="140dp"
        android:layout_margin="8dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/cover"
        android:layout_toRightOf="@+id/card2"
        android:onClick="keepCard4"/>
    <TextView
        android:id="@+id/coin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/card5"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="40dp"
        android:text="Coin : 0"
        android:textSize="25dp"/>
    <Button
        android:id="@+id/btnPlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/card3"
        android:text="PLAY"
        android:onClick="play"/>

</RelativeLayout>
